      '#type' => 'textfield',
      '#title' => t('Title'),

      '#description' => t('Required field - The title of the feed source. E.g. "New York Times Sport". '),
      '#states' => array(
        'visible' => array(
          ':input[name="format"]' => array('value' => 'rss'),
